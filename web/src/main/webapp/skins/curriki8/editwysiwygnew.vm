        plugins: 'submit line separator text valign list indent history format symbol link image table macro importer#if($request.sync) sync#end font color justify',
        syntax: "$doc.syntaxId",
        menu: 'link image table macro',
        toolbar: 'bold italic underline strikethrough | subscript superscript | justifyleft justifycenter justifyright justifyfull | forecolor backcolor fontname fontsize |  unorderedlist orderedlist | outdent indent | undo redo | format | hr symbol | link unlink | importer',
        wiki: '${doc.wiki.replace("'", "\'")}',
        space: '${doc.space.replace("'", "\'")}',
        page: '${doc.name.replace("'", "\'")}',
        debug: #if($request.debug)'true'#else'false'#end        
#if($request.sync)
        // Additional configuration for the real-time editing feature.
        syncPage: '${doc.fullName.replace("'", "\'")}',       
#if($request.reset=="1")
        syncReset: 1
#end
#end
    });
//]]>
</script>
