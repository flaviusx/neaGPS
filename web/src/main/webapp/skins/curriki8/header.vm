##Login Form
<div id="curriki-login-area">
<form action="$xwiki.getURL("XWiki.XWikiLogin", "loginsubmit", "xredirect=$logredir")" method="post">
 <div id="currikiLogin">
  <input id="loginname" tabindex="1" type="text" name="j_username" value="$msg.get("loginUsername")" onfocus="if (this.value=='$msg.get("loginUsername")'){this.value=''} else {this.select()};" onblur="if (this.value==''){this.value='$msg.get("loginUsername")';}"/>
  <input id="loginpwd" tabindex="2" type="password" name="j_password" onfocus="if(window.ActiveXObject || this.type == 'password'){this.select();} else {this.type='$msg.get("loginPassword")'; this.value=''; this.focus();}" onblur="if ((!window.ActiveXObject) && this.value==''){this.value='$msg.get("loginPassword")'; this.type='text';}"/>
  <script type="text/javascript">
   if(! window.ActiveXObject){
     pwdInput = document.getElementById('loginpwd');
     if(pwdInput.value == '') {
       pwdInput.setAttribute('type', 'text');
       pwdInput.value = '$msg.get("loginPassword")';
     }
   }
  </script>
##  <div id="loginbtn-container"><button id="loginbtn" type="submit">&#xBB;</button></div>
#button($msg.get("headerLoginGo") "blue" "submit" 'loginbtn" tabindex="4' "")
  <div id="loginextra">
  <label id="loginremember"><input tabindex="3" type="checkbox" name="j_rememberme" value="true"/> $msg.get("loginRememberme")</label>
  <a href="$xwiki.getURL("Main.ForgotPassword")" title="" id="loginforgotpassword" style="letter-spacing: -1px;">$msg.get("loginForgot")</a></div>##loginextra
 </div> ## currikiLogin
</form>
</div> ## curriki-login-area
