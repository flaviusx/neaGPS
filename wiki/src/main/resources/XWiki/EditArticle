function checkForm() {
   var isValid = true;
   var title = document.forms.inline['XWiki.ArticleClass_0_title'].value;
   if (title.length &lt;= 1) {
     alert("$msg.get("blogArticle.field.title.mandatory")");
     isValid = false;
   }
   return isValid;
}
