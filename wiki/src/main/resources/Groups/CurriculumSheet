&lt;script type="text/javascript"&gt;
var $hidden = false;
function toggle_desc(){
  var $action;
  var $titl;
  if ($hidden){
    $hidden = false;
    $action = 'show';
    $titl = "Hide Descriptions";
  } else {
    $hidden = true;
    $action = 'hide';
    $titl = "Show Descriptions";
  }
  $$('.groups-collections-row-description').invoke($action);
  $('hider-link').title=$titl;
  $('hider-link').innerHTML=$titl+"  &amp;raquo;";
  return false;
}
&lt;/script&gt;

     &lt;div id="hider-bar" class="titleheader titleheader-red"&gt;&lt;h3 id="hider-title"&gt;Group Collections&lt;/h3&gt;&lt;div id="hider-right" class="titleheader-right"&gt;&lt;a id="hider-link"  onclick="return toggle_desc();" title="Hide Descriptions"&gt;Hide Descriptions  &amp;raquo;&lt;/a&gt;&lt;/div&gt;&lt;/div&gt;
