<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.curriki</groupId>
    <artifactId>curriki-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>curriki-database</artifactId>
  <name>XWiki Products - Curriki - Database</name>
  <packaging>pom</packaging>
  <description>XWiki Products - Curriki - Database</description>
  <dependencies>
    <dependency>
      <groupId>org.curriki</groupId>
      <artifactId>curriki-wiki</artifactId>
      <version>${version}</version>
      <type>xar</type>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <!-- Step 1: Copy and filter the Hibernate config file which will be used by the packager
           plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- Step 2: Expand the XAR file -->
      <plugin>
        <groupId>com.xpn.xwiki.platform</groupId>
        <artifactId>xwiki-build-xar-plugin</artifactId>
        <version>1.1-SNAPSHOT</version>
        <configuration>
          <groupId>org.curriki</groupId>
          <artifactId>curriki-wiki</artifactId>
          <outputDirectory>${project.build.directory}/xar</outputDirectory>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>unxar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>hsqldb</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <xwiki.db.connection.url>jdbc:hsqldb:file:${project.build.directory}/database/xwiki_db;shutdown=true</xwiki.db.connection.url>         
      </properties>
      <build>
        <plugins>
          <!-- Step 3: Import the XAR content in the HSQL Database -->
          <plugin>
            <groupId>com.xpn.xwiki.platform</groupId>
            <artifactId>xwiki-packager</artifactId>
            <configuration>
              <sourceDirectory>${project.build.directory}/xar</sourceDirectory>
              <hibernateConfig>${project.build.directory}/classes/hibernate.cfg.xml</hibernateConfig>
            </configuration>
            <dependencies>
              <dependency>
                <groupId>hsqldb</groupId>
                <artifactId>hsqldb</artifactId>
                <version>1.8.0.1</version>
              </dependency>
            </dependencies>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>import</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <!-- Step 4: Zip the generated database -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <!-- Seems there's an issue with version 2.2-beta-1 for the application/ module. It does
                 not properly expand a dependency set. Thus we're forcing the usage of 2.1. We have
                 to use that version for all other modules too as Maven seems to have an issue when
                 using several versions of a plugin in the same build execution. To be removed once
                 the assembly plugin is fixed and released. -->
            <version>2.1</version>
            <configuration>
              <descriptors>
                <descriptor>src/assemble/database.xml</descriptor>
              </descriptors>
            </configuration>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
